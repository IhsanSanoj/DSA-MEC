#include <stdio.h>

#define n 10
int front = -1, rear = -1, dq[n];

// Check if deque is full
int isfull() {
    return (rear + 1) % n == front;
}

// Check if deque is empty
int isempty() {
    return front == -1;
}

// Insert at front
void insertfr(int item) {
    if (isfull()) {
        printf("Queue is full\n");
        return;
    }
    if (isempty()) {
        front = rear = 0;
    } else if (front == 0) {
        front = n - 1;
    } else {
        front--;
    }
    dq[front] = item;
    printf("%d added successfully to front\n", item);
}

// Insert at rear
void insertrr(int item) {
    if (isfull()) {
        printf("Queue is full\n");
        return;
    }
    if (isempty()) {
        front = rear = 0;
    } else {
        rear = (rear + 1) % n;
    }
    dq[rear] = item;
    printf("%d added successfully to rear\n", item);
}

// Delete from front
void delfr() {
    if (isempty()) {
        printf("Queue is empty\n");
        return;
    }
    printf("%d deleted from front\n", dq[front]);
    if (front == rear) {
        front = rear = -1;
    } else {
        front = (front + 1) % n;
    }
}

// Delete from rear
void delrr() {
    if (isempty()) {
        printf("Queue is empty\n");
        return;
    }
    printf("%d deleted from rear\n", dq[rear]);
    if (rear == front) {
        front = rear = -1;
    } else if (rear == 0) {
        rear = n - 1;
    } else {
        rear--;
    }
}

// Display elements of the deque
void display() {
    if (isempty()) {
        printf("Queue is empty\n");
        return;
    }
    int i = front;
    while (1) {
        printf("%d\t", dq[i]);
        if (i == rear)
            break;
        i = (i + 1) % n;
    }
    printf("\n");
}

// Main program
int main() {
    int type, ch, item;

    printf("Choose Deque Type:\n");
    printf("1. Input Restricted Deque\n");
    printf("2. Output Restricted Deque\n");
    scanf("%d", &type);

    while (1) {
        printf("\nEnter your choice:\n");
        if (type == 1) {   // Input Restricted
            printf("1: Insert to rear\n");
            printf("2: Delete from front\n");
            printf("3: Delete from rear\n");
            printf("4: Display\n");
            printf("5: Exit\n");
        } else {           // Output Restricted
            printf("1: Insert to front\n");
            printf("2: Insert to rear\n");
            printf("3: Delete from front\n");
            printf("4: Display\n");
            printf("5: Exit\n");
        }
        scanf("%d", &ch);

        if (type == 1) {   // Input Restricted
            switch (ch) {
                case 1:
                    printf("Enter item: ");
                    scanf("%d", &item);
                    insertrr(item);
                    break;
                case 2:
                    delfr();
                    break;
                case 3:
                    delrr();
                    break;
                case 4:
                    display();
                    break;
                case 5:
                    printf("Exiting...\n");
                    return 0;
                default:
                    printf("Enter a valid choice\n");
            }
        } else {           // Output Restricted
            switch (ch) {
                case 1:
                    printf("Enter item: ");
                    scanf("%d", &item);
                    insertfr(item);
                    break;
                case 2:
                    printf("Enter item: ");
                    scanf("%d", &item);
                    insertrr(item);
                    break;
                case 3:
                    delfr();
                    break;
                case 4:
                    display();
                    break;
                case 5:
                    printf("Exiting...\n");
                    return 0;
                default:
                    printf("Enter a valid choice\n");
            }
        }
    }
}
