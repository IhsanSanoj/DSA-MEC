#include<stdio.h>
#define max 10

typedef struct{
int row;
int col;
int val;
}term;




void main(){
term a[max],t[max],s[max];
int i,sum;
a[0]=(term){3,4,4};
a[1]=(term){0,0,1};
a[2]=(term){0,2,2};
a[3]=(term){1,2,3};
a[4]=(term){2,3,3};
int r=a[0].row;
int c=a[0].col;
int v=a[0].val;
t[0]=(term){r,c,v};
for(int i=1;i<=v;i++){
t[i].row=a[i].col;
t[i].col=a[i].row;
t[i].val=a[i].val*2;
}
printf("1st matrix\n");
for(i=0;i<=v;i++){
printf("(%d,%d,%d)\n",a[i].row,a[i].col,a[i].val);
}
printf("\n");
printf("2nd matrix\n");
for(i=0;i<=v;i++){
printf("(%d,%d,%d)\n",t[i].row,t[i].col,t[i].val);
}
int n=0;
for(i=1;i<=v;i++){
s[i].row=a[i].row;
s[i].col=a[i].col;
sum=a[i].val+t[i].val;
if (sum!= 0) n++;
s[i].val=sum;

}

printf("sum matrix\n");
for(i=0;i<=v;i++){
printf("(%d,%d,%d)\n",s[i].row,s[i].col,s[i].val);
}
}
